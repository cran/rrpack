Package: rrpack
Title: Reduced-Rank Regression
Version: 0.1-14
Authors@R: c(
    person(given = "Kun", family = "Chen",
           email = "kun.chen@uconn.edu",
           role = c("aut", "cre"),
           comment = c(ORCID = "0000-0003-3579-5467")),
    person(given = "Wenjie", family = "Wang", role = "aut",
           comment = c(ORCID = "0000-0003-0363-3180")),
